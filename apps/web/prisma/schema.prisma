generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  name      String?
  bio       String?
  image     String?
  theme     String?  // 'light' | 'dark' | 'system'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
